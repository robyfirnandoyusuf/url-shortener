<body>

    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-auto">
            <div class="inner text-center">
                <center><h3 class="masthead-brand">She has Short Hair</h3></center>
            </div>
        </header>

        <main role="main" class="inner cover">
            <img src="https://i.pinimg.com/564x/5d/82/68/5d82686cb82742e7c50c668ddca13b75.jpg" width="300px">
            <h1 class="cover-heading text-center">Short Url</h1>
            <form action="" method="POST" id="form-url">
                <div class="form-group text-center">
                    <label for="exampleInputEmail1">URL</label>
                    <input type="text" class="form-control" placeholder="Enter your url" name="url" id="txt-url">
                    <!-- <small id="emailHelp" class="form-text text-muted"></small> -->
                </div>
                <div class="form-group text-center canvas-result" style="display:none;">
                    <label for="exampleInputEmail1">Result:</label>
                    <input type="text" class="form-control" readonly id="txt-res-url">
                </div>
                <div class="form-group canvas-custom" style="display:none">
                    <label for="exampleInputEmail1"></label>
                    <input type="text" class="form-control" id="txt-res-url" name="custom_url" placeholder="Custom URL">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Custom</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-secondary">Submit</button>
                </div>
            </form>
        </main>

        <footer class="mastfoot mt-auto">
            <div class="inner">
                <p>Developed with ðŸ’”, by <a href="https://www.instagram.com/your.online.clown/">@your.online.clown</a>.</p>
            </div>
        </footer>
    </div>


